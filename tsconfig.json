{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@velonus/shared": ["./packages/shared/src"],
      "@velonus/editor": ["./packages/editor/src"],
      "@velonus/realtime": ["./packages/realtime/src"],
      "@velonus/ai": ["./packages/ai/src"],
      "@velonus/ui": ["./packages/ui/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", ".next", "build"],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/api" },
    { "path": "./packages/shared" },
    { "path": "./packages/editor" },
    { "path": "./packages/realtime" },
    { "path": "./packages/ai" },
    { "path": "./packages/ui" }
  ]
} 